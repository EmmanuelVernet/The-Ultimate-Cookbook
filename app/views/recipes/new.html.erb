<div class="container-division">
  <h1>Nouvelle recette</h1>
</div>

<div class="container-division", style="margin-left: 15px; margin-right: 15px; margin-bottom: 80px; overflow: hidden;">
    <%= simple_form_for [@recipe] do |f| %>
       <strong><%= f.input :recipe_name, label: 'Nom de la recette', placeholder: 'Ex: Ratatouille' %></strong>
       <strong><%= f.input :recipe_category, label: 'Categorie', placeholder: 'Ex: Viande' %></strong>
       <strong><%= f.input :recipe_overview, label: 'En deux mots...', placeholder: 'Ex: Un délice sain et facile à cuisiner' %></strong>
       <strong><%= f.input :preparation_time, label: "Temps de préparation", placeholder: 'Ex: 20 min' %></strong>
       <strong><%= f.input :servings, label: 'Convives', placeholder: 'Ex: 4' %></strong>
       <strong><%= f.input :recipe_steps, label: 'Etapes à suivre', placeholder: 'Ex: 1. Eplucher les oignons...' %></strong>
       <strong><%= f.input :import_source, label: 'Source: ', placeholder: 'Ex: www.marmiton.com' %></strong>
       <strong><%= f.input :recipe_likes, label: 'Likes:', placeholder: 'Ex: 26' %></strong>
       <strong><%= f.input :favorite, as: :boolean, input_html: { class: "toggle" }, label: 'En favoris' %></strong>
       <strong><%= f.button :submit, 'Créer ma recette', class: "btn-vert w-100" %></strong>
    <% end %>
      <br>
    <%= link_to recipes_path do %>
      <div class="btn-bleu" style="width: 100%; color: white;">Annuler</div>
    <% end %>
</div>
