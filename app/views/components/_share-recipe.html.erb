<div class="container">
  <h1>Partager la recette</h1>
  <%= simple_form_for @share do |f| %>
    <%= f.association :receiver, 
          collection: User.all.pluck(:user_name, :id),
          # collection: FollowersUser.where(user: current_user),
          label: 'Destinataire', 
          prompt: 'SÃ©lectionner un destinataire' %>
    
    <%= f.input :recipe_id, 
          as: :hidden, 
          input_html: { value: @recipe.id } %>
    <p><strong>Recette: </strong><%= @recipe.recipe_name %></p>
    <%= f.input :message, label: 'Message' %>
    <%= f.button :submit, 'Partager!', class: "btn btn-primary w-100" %>
  <% end %>
</div>
