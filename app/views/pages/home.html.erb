<div class="container-division">
  <h1>Suggestions du jour</h1>


  <swiper-container class="mySwiper swiper-container-carousel-1" pagination="false" effect="coverflow" grab-cursor="true" centered-slides="true"
      slides-per-view="1.5" coverflow-effect-rotate="50" coverflow-effect-stretch="0" coverflow-effect-depth="100" space-between="30" free-mode="true" initial-slide="1"
      coverflow-effect-modifier="1" coverflow-effect-slide-shadows="false">

    <% @recipes.first(3).each do |recipe| %>
      <swiper-slide class="swiper-slide-carousel-1">
        <div class="item-centrage">
          <%= link_to recipes_path(recipe) do %>
            <%= render partial: "components/card-overview", locals: { recipe: recipe } %>
          <% end %>
        </div>
      </swiper-slide>
    <% end %>
  </swiper-container>
</div>



